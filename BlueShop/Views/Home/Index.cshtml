    <style>
        .col-md-3 {
            height: 30%;
            float: left;
            margin: 2% 0% 2% 0;
            margin-left: 2.4%;
            position: relative;
        }

            .col-md-3:nth-child(2) {
                margin: 2% 9% 0 9%;
            }

            .col-md-3:nth-child(5) {
                margin: 2% 9% 0 9%;
            }

            .col-md-3:nth-child(8) {
                margin: 2% 9% 0 9%;
            }

            .col-md-3 img {
                height: 150px;
                width: 100%;
                opacity: 1;
                display: block;
                transition: .5s ease;
                backface-visibility: hidden;
                box-shadow: 0 20px 50px rgba(0,0,0,.8);
            }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
        }

        .col-md-3:hover img {
            opacity: 0.6;
        }

        .col-md-3:hover .middle {
            opacity: 1;
        }

        .text {
            background: rgba(143, 0, 179, 0.9);
            display: block;
            width: 100%;
            color: white;
            font-size: 16px;
            padding: 10px 32px;
            text-decoration: none;
        }

            .text:hover {
                text-decoration: none;
                color: #000;
            }

        .col {
            background: #00E6FF;
            width: 100%;
            height: 60px;
            margin: 0 auto;
            box-shadow: 0 20px 80px rgba(0,0,0,.8);
        }

            .col h3 {
                text-align: center;
                color: white;
                padding: 1%;
            }
    </style>

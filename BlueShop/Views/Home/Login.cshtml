@model BlueShop.Models.User
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="" id="deleteModal">
    <div class="modal-body" style="width:50%;margin:0 auto;">
        <div class="modal-content">

            <div class="modal-body" style="width:70%;margin: 0 auto;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <div class="form-horizontal" style="border-radius:5px;">

                        <h4 style="font-family:'Times New Roman';color:#0094ff;text-align:center;font-weight: bold;">Đăng nhập</h4">
                            <hr style="height:1px;background:#000;">
                            @Html.ValidationSummary(true, " ", new { @class = "text-danger" })

                            <div class="form-group" style="text-align:left;margin-top:5%;;font-size:16px;">
                                <label class="control-label col-md-10" for="UserName" style="margin-left:55px">Tên tài khoản:</label>
                                <div class="col-md-10" style="margin-left:55px">
                                    <input type="text" name="UserName" value="" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group" style="text-align:left;font-size:16px;">
                                <label class="control-label col-md-10" for="PassWord" style="margin-left:55px">Mật khẩu:</label>
                                <div class="col-md-10" style="margin-left:55px">
                                    <input type="Password" name="Password" value="" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group" >
                                <div class=" col-md-6" style="margin-left:13px;">
                                    <input type="submit" value="Đăng Nhập" class="btn btn-danger " />
                                </div>
                            </div>


                    
                            </div>
                }
              
                <div class=" col-md-4 btn btn-warning" style="margin-left:50%;margin-top:-90px">
                    @Html.ActionLink("Tạo tài khoản", "Create","Users")
                </div>

                <hr style="height:1px;background:#000">
            </div><!-- /.modal-body -->


        </div>
    </div>
</div>
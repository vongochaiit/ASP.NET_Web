
<div class="" style="margin-top:10%;">

    
    @foreach (var item in Model)
    {
        <div class="box3 " style="margin:0 auto;display:block;">
            <a href="@Url.Action("Details","Home",new { id = item.ProductID })">
                <div class="card " style="width: 18rem;float:left;margin-right:1%;height:400px; margin-bottom:15px;margin-left:2.5%">
                    <img class="card-img-top" src="@Url.Content(item.Image)" alt="Card image cap " style="height:250px">
                    <div class="card-body">
                        <a class="card-title" href="" title="">Tên sản phẩm: @item.Name</a>
                        <br />
                        <a class="card-title" href="" title=""> Tên cửa hàng: @item.Shop.NameShop</a>
                        <p><a class="disabled" href=""></a> <a class="enable" href="">Giá:  @string.Format("{0:0,0}", item.Price)  Đ</a></p>
                    </div>
                </div>

            </a>
        </div>
    }
</div>
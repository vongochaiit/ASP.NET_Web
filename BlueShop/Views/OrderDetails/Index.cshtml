@model IEnumerable<BlueShop.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Quản Lý Đơn Đặt Hàng</h2>

  @using (Html.BeginForm())
    {
<div class="form-group accordion">
    <div class="form-group col-md-4" style="float:left">
        <label class="control-label col-md-5" style="float:left;padding-top:12px" for="Name">Tên sản phẩm:</label>
        @Html.TextBox("SearchName", "", new { @class = "form-control ", @placeholder = "Nhập tên sản phẩm", style = "float:left" })
    </div>
    <div class="form-group col-md-4" style="float:left">
        <label class="control-label col-md-4" style="float:left;padding-top:12px" for="Name">Giá thấp nhất:</label>
        @Html.TextBox("min", "", new { @class = "form-control ", @placeholder = "Nhập giá thấp nhất", style = "float:left" })
    </div>
    <div class="form-group col-md-4" style="float:left">
        <label class="control-label col-md-4" style="float:left;padding-top:12px" for="Name">Giá cao nhất:</label>
        @Html.TextBox("max", "", new { @class = "form-control ", @placeholder = "Nhập giá cao nhất", style = "float:left" })
    </div>
    <div class="form-group col-md-4" style="float:left">
        <label class="control-label col-md-4" style="float:left;padding-top:12px" for="Name">Mã đặt hàng:</label>
        @Html.TextBox("code", "", new { @class = "form-control ", @placeholder = "Nhập mã đặt hàng", style = "float:left" })
    </div>
    <div class="form-group col-md-4" style="float:left">
        <label class="control-label col-md-4" style="float:left;padding-top:12px" for="Name">Trạng thái</label>
        @Html.TextBox("trangthai", "", new { @class = "form-control ", @placeholder = "Nhập trạng thái", style = "float:left" })
    </div>

    <div style="width: 55%;margin-bottom:2%">
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />

    </div>
</div>
    }
<table class="table table-bordered" style="text-align:center;">
    <tr>
        <th>
            Người Đặt Hàng
        </th>
        <th>
            Cửa Hàng
        </th>
        <th>
            Số Lượng Đặt Hàng
        </th>
        <th>
            Giá
        </th>
        <th>
            Mã Đặt Hàng
        </th>
        <th>
            Trạng Thái
        </th>

        <th>
            Tên Sản Phẩm
        </th>

        @*<th>
            Chi Tiết
        </th>*@
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Order.User.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Order.Shop.NameShop)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QuantityOrdered)
    </td>

    <td>
        @string.Format("{0:0,0}", item.Price) Đ
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Product.Name)
    </td>
    @*<td>
            <a class="ajax-link btn btn-secondary " href="@Url.Action("Details", new { id = item.OrderDetailsID })"><i class="fas fa-check-square"></i></a>


        </td>*@
</tr>
    }

</table>
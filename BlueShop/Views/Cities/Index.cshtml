@model IEnumerable<BlueShop.Models.City>

@{
    ViewBag.Title = "Index";
}


<h2 style="text-align:center">Quản Lý Tỉnh, Thành Phố</h2>
<p>
    <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Tỉnh/Thành phố", "Index", "Countries")</button>
    <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Thêm Quận/Huyện", "Create")</button>
</p>
@using (Html.BeginForm())
{
<div class="form-group accordion">
    <div class="form-group col-md-4" style="float:left">
        <label class="control-label col-md-5" style="float:left;padding-top:12px" for="Name">Tên Quận/Huyện:</label>
        @Html.TextBox("SearchName", "", new { @class = "form-control ", @placeholder = "Nhập Quận/Huyện", style = "float:left" })
    </div>

    <div class="form-group col-md-4" style="float:left;margin-top:40px">
        <label class="control-label col-md-5" style="float:left;padding-top:12px" for="Name">Tỉnh/Thành phố:</label>
        @Html.DropDownList("CountryID", ViewBag.CountryID as SelectList, "Tỉnh/TP", htmlAttributes: new { @class = "form-control btn btn-primary  col-md-4", style = "float:left" })
    </div>

    <div style="width: 55%;margin-bottom:2%">
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />

    </div>
</div>
}
<table class="table table-bordered" style="text-align:center;">
    <tr>
        <th>
            Tên Quận Huyện
        </th>
        <th>
            Tên Tỉnh Thành
        </th>
        <th>

        </th>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.NameCountry)
            </td>
            <td>
                <a class=" btn btn-success " href="@Url.Action("Edit", new {id = item.CityID })"> <i class="fas fa-edit"></i></a>
                <a class="ajax-link btn btn-danger " href="@Url.Action("Delete", new {id = item.CityID })"> <i class="fas fa-trash-alt"></i></a>

            </td>
        </tr>
    }

    </table>
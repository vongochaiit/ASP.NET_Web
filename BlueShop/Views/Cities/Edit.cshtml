@model BlueShop.Models.City

@{
    ViewBag.Title = "Edit";
}
<br />
<h2 style="text-align:center"> Chỉnh Sửa Quận, Huyện</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container" style="margin-left:35%">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CityID)

        <div class="form-group">
            <label class = "control-label col-md-2">Tên Tỉnh/Thành phố</label>
           
            <div class="col-md-10">
                @Html.DropDownList("CountryID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CountryID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên Quân/Huyện</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.NameCity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameCity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Chỉnh sửa" class="btn btn-secondary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở Về Trang Chủ", "Index")
</div>
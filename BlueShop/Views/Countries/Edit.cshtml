@model BlueShop.Models.Country

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center">Chỉnh Sửa Tỉnh, Thành Phố</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-left:25%">
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.CountryID)

            <div class="form-group row">

                <label class="control-label col-md-2">Tên Tỉnh/Thành phố</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCountry, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameCountry, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:16%">
                <input type="submit" value="Chỉnh sửa" class="btn btn-outline-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở Về Trang Chủ", "Index")
</div>


@{
    Layout = "~/Views/Shared/_Layout_ajax.cshtml";
}

<div class="modal fade deleteModal" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body">
                <h3>Are you sure you want to delete this link?</h3>
            </div>

            <div class="modal-footer">
                @using (Ajax.BeginForm("Delete", "Shops", new AjaxOptions { HttpMethod = "POST" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Yes" class="btn btn-danger" />
                        <a class=" btn btn-light" href="@Url.Action("Index")"><span style="color:blueviolet;text-align:center">No</span></a>
                    </div>
                }
            </div><!-- /.modal-footer -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>


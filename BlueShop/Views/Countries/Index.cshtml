@model IEnumerable<BlueShop.Models.Country>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Tỉnh/Thành Phố</h2>

<p>
    <button type="button" class="btn btn-outline-danger">  @Html.ActionLink("Thêm Tỉnh/Thành phố", "Create")</button>
    @*@Html.ActionLink("Thêm tỉnh/thành phố", "Create")*@
 
</p>
<table class="table table-bordered" style="text-align:center;">
    <tr>
        <th>
            Tên Tỉnh/Thành Phố
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCountry)
            </td>
            <td>

                <a class=" btn btn-success " href="@Url.Action("Edit", new {id = item.CountryID })"> <i class="fas fa-edit"></i></a>
                <a class="ajax-link btn btn-danger " href="@Url.Action("Delete", new {id = item.CountryID })"> <i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>